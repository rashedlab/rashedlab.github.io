  <script>
    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Filter logic
    const q = document.getElementById('q');
    const yearSel = document.getElementById('year');
    const chips = Array.from(document.querySelectorAll('.chip'));
    const pubs = Array.from(document.querySelectorAll('.pub'));
    const noResults = document.getElementById('noResults');
    const clearBtn = document.getElementById('clearBtn');

    let activeType = "all";

    function normalize(s){ return (s || "").toLowerCase().trim(); }

    function applyFilters(){
      const query = normalize(q.value);
      const year = yearSel.value;

      let shown = 0;

      pubs.forEach(p => {
        const type = p.dataset.type || "";
        const pubYear = p.dataset.year || "";
        const hay = normalize(
          p.querySelector('.title')?.textContent + " " +
          (p.querySelector('.meta')?.textContent || "") + " " +
          (p.dataset.keywords || "")
        );

        const typeOk = (activeType === "all") || (type === activeType);
        const yearOk = (!year) || (pubYear === year);
        const qOk = (!query) || hay.includes(query);

        const ok = typeOk && yearOk && qOk;
        p.style.display = ok ? "block" : "none";
        if (ok) shown++;
      });

      // Hide whole sections that have no visible pubs
      const lists = Array.from(document.querySelectorAll('.pubList'));
      lists.forEach(list => {
        const items = Array.from(list.querySelectorAll('.pub'));
        const anyVisible = items.some(it => it.style.display !== "none");
        list.parentElement.style.display = anyVisible ? "block" : "none";
      });

      noResults.style.display = shown === 0 ? "block" : "none";
    }

    chips.forEach(chip => {
      chip.addEventListener('click', () => {
        chips.forEach(c => c.classList.remove('active'));
        chip.classList.add('active');
        activeType = chip.dataset.type;
        applyFilters();
      });
    });

    q.addEventListener('input', applyFilters);
    yearSel.addEventListener('change', applyFilters);

    clearBtn.addEventListener('click', () => {
      q.value = "";
      yearSel.value = "";
      activeType = "all";
      chips.forEach(c => c.classList.remove('active'));
      chips.find(c => c.dataset.type === "all")?.classList.add('active');
      applyFilters();
    });

    // Initial
    applyFilters();
  </script>
